<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<RootNamespace>PavlovVR_Rcon</RootNamespace>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>Pavlov VR RCON library</Title>
		<Authors>RainOrigami</Authors>
		<Description>A library to interface with Pavlov VR servers, execute RCON commands and process their replies.</Description>
		<PackageProjectUrl>https://github.com/Longoon12000/PavlovVR-Rcon</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/Longoon12000/PavlovVR-Rcon</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>rcon;gaming;pavlov;vr;server</PackageTags>
		<Version>1.2.0</Version>
		<AssemblyVersion>1.2.0.0</AssemblyVersion>
		<FileVersion>1.2.0.0</FileVersion>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
	</ItemGroup>

</Project>